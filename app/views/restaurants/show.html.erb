<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>
<% @reviews.each do |rev| %>
  <%= rev.content %>
  <%= rev.rating %>
<% end %>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>
